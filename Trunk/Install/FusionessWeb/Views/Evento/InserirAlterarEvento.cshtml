@model Fusioness.Models.Eventos.EventoModel
@{
    ViewBag.Title = "Inserir Evento";
    Layout = "~/Views/Shared/LayoutBase.cshtml";
}

<!-- LINHA 1 -->
<div class="row-fluid">
    <!-- BLOCK -->
    <div class="span12">
        <div class="card">
            <h2 class="card-heading simple">Cadastre seu evento!</h2>
            <div class="card-body">
                @using (Html.BeginForm("InserirOuAlterarEvento", "Evento", FormMethod.Post))
                {
                    @Html.LabelFor(m => m.Evento.UrlImagem)
                    @Html.TextBoxFor(m => m.Evento.UrlImagem)
                    <br />
                    @Html.LabelFor(m => m.Evento.Titulo)
                    @Html.TextBoxFor(m => m.Evento.Titulo)
                    <br />
                    @Html.LabelFor(m => m.Evento.Descricao)
                    @Html.TextBoxFor(m => m.Evento.Descricao)
                    <br />
                    @Html.LabelFor(m => m.ListaRotas,"Rota:")
                    @Html.DropDownListFor(m => m.Evento.IdRota, new SelectList(Model.ListaRotas, "IdRota", "Descricao"))
                    <br />
                    @Html.HiddenFor(m => m.Evento.IdEvento)
                    <input type="submit" value="Enviar" />
                }
            </div>
        </div>
    </div>
    <!-- END BLOCK -->
</div>
<!-- END LINHA 2 -->
