@using System.Activities.Expressions
@model Fusioness.Models.Eventos.EventoModel
@{
  ViewBag.Title = "Eventos";
  Layout = "~/Views/Shared/LayoutBase.cshtml";
}
<!-- LINHA 1 -->
<div class="row-fluid">
  <!-- BLOCK -->
  <div class="span12">
    <div class="card">

      <h2 class="card-heading simple">Detalhe</h2>
      <div class="card-body">
         

      <div class="card-heading">
        @Html.ActionLink("Voltar", "Index", "Evento", new{ @class = "pull-right btn btn-primary"})
        <h2 class="card-heading simple">Detalhe do Evento</h2>
      </div>
      <div class="card-body">
        @Html.DisplayTextFor(m => m.Evento.Titulo) 
        - @Html.DisplayTextFor(m => m.Evento.Usuario.Nome)
        - @Html.DisplayTextFor(m => m.Evento.Data)
        <br />
        @Html.DisplayTextFor(m => m.Evento.Descricao)
        <br />
        @(Model.Evento.Publico ? "Publico" : "Privado")
        <br />
        @Html.DisplayTextFor(m => m.Evento.Rota.Dificuldade)

      </div>
    </div>
  </div>
  <!-- END BLOCK -->
</div><!-- END LINHA 2 -->

