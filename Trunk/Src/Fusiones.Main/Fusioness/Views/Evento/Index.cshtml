@model Fusioness.Models.Eventos.EventoModel
@{
    ViewBag.Title = "Eventos";
    Layout = "~/Views/Shared/LayoutBase.cshtml";
    var urlTemp = "data:image/png;base64,";
}

@section head{
    <style type="text/css">
        h4{font-weight:bold;white-space:nowrap;text-overflow:ellipsis;overflow:hidden;}
         .card .card-body{padding: 20px}
        .thumbnails{margin:10px 0}
        .imgContainer {
            width: 100%;
            height: 200px;
            overflow: hidden;
            -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;
            background-repeat: no-repeat;
            background-position: 50% 50%;
        }
        .thumbnail{position: relative;}
        .btn-group{position: absolute;right: 10px;bottom: 10px;}

        .descricaoContainer{
            max-width: 100%;
            max-height: 160px;
            display: block; /* Fallback for non-webkit */
            display: -webkit-box;
            margin: 0 auto;
            -webkit-line-clamp:8;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
}

<!-- LINHA 1 -->
<div class="row-fluid">
    <!-- BLOCK -->
    <div class="span12">
        <div class="card">
            <h2 class="card-heading simple">Lista de Eventos</h2>
            <div class="card-body" style="overflow: hidden">
                @foreach (var item in Model.ListaEventos)
                {
                    string enderecoImage = string.IsNullOrEmpty(item.UrlImagem) ? urlTemp : item.UrlImagem;
                    
                    <ul class="thumbnails" style="float: left; width: 350px; height: 450px;">
                        <li style="width: 100%; height: 100%;">
                            <div class="thumbnail" style="margin: 5px; height: 100%">
                                <div class="imgContainer" style="background-image: url(@enderecoImage)"></div>
                                <h4>@item.Titulo @if (item.Distancia != null){ <text> - </text> @item.Distancia <text> KM</text>}</h4>
                                <p class="descricaoContainer">@(item.Descricao)</p>
                                <p>
                                    <div class="btn-group">
                                        @Html.ActionLink("Detalhes", "Detalhar", "Evento", new { idEvento = item.IdEvento }, new { @class = "btn btn-primary" })
                                        @if (Model.SouDonoDoEvento(item.IdEvento))
                                        {
                                            <!--<a href="#divExclusao" class="btn btn-danger" data-toggle="modal">Excluir Evento</a>-->
                                            @Html.ActionLink("Excluir", "ExcluirEvento", "Evento", new { idEvento = item.IdEvento }, new { @class = "btn btn-danger" })
                                        }
                                    </div>
                                </p>
                            </div>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <!-- END BLOCK -->
</div>
<!-- END LINHA 2 -->

<!-- LINHA 2 -->
<div class="row-fluid"></div>

