@model Fusioness.Models.Eventos.EventoModel
@{
  ViewBag.Title = "Eventos";
  Layout = "~/Views/Shared/LayoutBase.cshtml";
}
<!-- LINHA 1 -->
<div class="row-fluid">
  <!-- BLOCK -->
  <div class="span12">
    <div class="card">
      <h2 class="card-heading simple">Lista de Eventos</h2>
      <div class="card-body">
        <table class="table table-hover">
            <thead>
                <th></th>
                <th>Título</th>
                <th>Data</th>
                <th></th>
            </thead>
            <tbody>
            @foreach (var item in Model.ListaEventos)
            {
                <tr>
                    <td>@item.IdEvento</td>
                    <td>@item.Titulo</td>
                    <td>@item.Data</td>
                  <td>
                    @Html.ActionLink("Detalhes", "Detalhar", "Evento", new{ id = item.IdEvento}, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Excluir", "ExcluirEvento", "Evento", new{ id = item.IdEvento}, new { @class = "btn btn-primary" })
                  </td>
                </tr>
            }
            </tbody>
        </table>  
      </div>
    </div>
  </div>
  <!-- END BLOCK -->
</div><!-- END LINHA 2 -->

