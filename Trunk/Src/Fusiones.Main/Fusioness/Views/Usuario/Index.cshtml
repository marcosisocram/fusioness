@model Fusioness.Models.Usuarios.UsuarioModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutBase.cshtml";
    Html.ValidationSummary("Create was unsuccessful. Please correct the errors and try again.");
}

<!-- LINHA 1 -->
<div class="row-fluid">
  <!-- BLOCK -->
  <div class="span12">
    <div class="card">
      <h2 class="card-heading simple">Cabeçalho - Bloco tamanho 12</h2>
      <div class="card-body">
        @using (Html.BeginForm("InsertUsuario", "Usuario", FormMethod.Post))
        {
          @Html.LabelFor(m => m.Usuario.Nome)
          @Html.TextBoxFor(m => m.Usuario.Nome)
          @Html.ValidationMessage("Nome")
          <br />
          @Html.LabelFor(m => m.Usuario.Login)
          @Html.TextBoxFor(m => m.Usuario.Login)
          @Html.ValidationMessage("Login")
          <br />
          @Html.LabelFor(m => m.Usuario.Senha)
          @Html.PasswordFor(m => m.Usuario.Senha)
          @Html.ValidationMessage("Senha")
          <br />
          @Html.LabelFor(m => m.Usuario.Email)
          @Html.TextBoxFor(m => m.Usuario.Email)
          @Html.ValidationMessage("Email")
          <br />
          @Html.LabelFor(m => m.Usuario.Idade)
          @Html.TextBoxFor(m => m.Usuario.Idade)
          @Html.ValidationMessage("Idade")
          <br />
          @Html.LabelFor(m => m.Usuario.Sexo)
          @Html.TextBoxFor(m => m.Usuario.Sexo)
          @Html.ValidationMessage("Sexo")
          <br />
          @Html.HiddenFor(m => m.Usuario.IdUsuario)
          <input type="submit" value="Send" />
        }
      </div>
    </div>
  </div>
  <!-- END BLOCK -->
</div>
<!-- END LINHA 2 -->