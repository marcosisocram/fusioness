@model Fusioness.Models.Contatos.ContatoModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutBase.cshtml";
}
<script type="text/javascript">
    function VerPerfilUsuario(idusuario) {
        window.location = '/Usuario/VerPerfilUsuario?IdUsuario=' + idusuario;
    }
</script>
@*<!-- LINHA 1 -->
<div class="row-fluid">
  <!-- BLOCK -->
  <div class="span12">
        
    </div>
    <div class="card">
      <h2 class="card-heading simple">Cabeçalho - Bloco tamanho 12</h2>
      <div class="card-body">
        @using (Html.BeginForm("AdicionarContato", "Contato", FormMethod.Post))
        {
          <span>Contatos</span>
          @Html.DropDownListFor(m => m.UsuarioSelecionado.IdUsuario, new SelectList(Model.ListaDeUsuarios, "IdUsuario", "Nome"))
          <br />
          <input type="submit" value="Salvar" class="btn btn-primary" />
        }
      </div>
    </div>
  <!-- END BLOCK -->
</div>
<!-- END LINHA 2 -->*@
<div class="row">
    @foreach (var usuario in Model.ListaDeUsuarios)
    {
        <div class="col-md-1">
            <div class="span12" style="width: 150px; height: 250px; overflow: hidden; cursor: pointer" onclick="VerPerfilUsuario(@usuario.IdUsuario);">
                <label style="font-weight: bold;">@usuario.Nome</label>
                <img src="@String.Format("{0}{1}", Fusioness.Controllers.BaseController.ObterUrlBaseAvatar(), usuario.UrlImagem)" alt="[usuario não possui foto]" title="Ver perfil de @usuario.Nome"/>
            </div>
        </div>
            }
</div>
