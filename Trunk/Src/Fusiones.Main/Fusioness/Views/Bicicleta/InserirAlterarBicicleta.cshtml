@model Fusioness.Models.Bicicletas.BicicletaModel
@{
    ViewBag.Title = "Inserir Bicicleta";
    Layout = "~/Views/Shared/LayoutBase.cshtml";
}
<!-- LINHA 1 -->
<div class="row-fluid">
    <!-- BLOCK -->
    <div class="span12">
        <div class="card">            
            <div class="card-body">
                @using (Html.BeginForm("InserirAlterarBicicleta", "Bicicleta", FormMethod.Post))
                {
                    @Html.LabelFor(m => m.Bicicleta.Modelo)
                    @Html.TextBoxFor(m => m.Bicicleta.Modelo)
                    @Html.ValidationMessage("Modelo", new { style = "margin-left:10px" })

                    <br />
    
                    @Html.LabelFor(m => m.Bicicleta.Marca)
                    @Html.TextBoxFor(m => m.Bicicleta.Marca)
                    @Html.ValidationMessage("Marca", new { style = "margin-left:10px" })

                    <br />
                    @Html.HiddenFor(m => m.Bicicleta.IdBicicleta)
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                 }
            </div>
        </div>           
    </div>
    <!-- END BLOCK -->
</div>
<!-- END LINHA 2 -->
