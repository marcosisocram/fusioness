@model Fusioness.Models.Bicicletas.BicicletaModel
@{
    ViewBag.Title = "Inserir Imagem na Bicicleta";
    Layout = "~/Views/Shared/LayoutBase.cshtml";
}

<!-- LINHA 1 -->
<div class="row-fluid">
    <!-- BLOCK -->
    <div class="span12">
        <div class="card">
             <h2 class="card-heading simple">
                @Html.ActionLink("Voltar", "Index", "Evento", new { @class = "pull-right btn btn-primary" })
                Detalhes da Bicicleta:
            </h2>       

             <h5 style="font-size:13px; font-style:italic" class="card-heading simple">
                Agora que você já informou o modelo e marca da bicicleta, vamos adicionar uma foto.
            </h5>       
            <div class="card-body">
                @using (Html.BeginForm("EnviarImagem", "Bicicleta", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    
                    <label for="ImagemBicicleta">Imagem</label>
                    @Html.TextBoxFor(m => m.ImagemBicicleta, new { type = "file"})
                    
                    @Html.HiddenFor(m => m.Bicicleta.IdBicicleta)
                    <br />
                    
                    
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    @Html.ActionLink("Pular", "Index", "Bicicleta", new { @class = "pull-right btn btn-primary" })
                }

            </div>
            <div class="card-body"></div>
        </div>           
    </div>
    <!-- END BLOCK -->
</div>
<!-- END LINHA 2 -->
                    
