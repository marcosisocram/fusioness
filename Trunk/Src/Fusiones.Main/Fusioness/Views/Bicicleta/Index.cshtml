<!-- LINHA 1 -->
<div class="row-fluid">
  <!-- BLOCK -->
  <div class="span12">
    <div class="card">
      <h2 class="card-heading simple">Minhas bicicletas</h2>
      <div class="card-body">
        <table class="table table-hover">
            <thead>
                <th>Foto</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Ações</th>
            </thead>
            <tbody>
            @foreach (var bicicleta in Model.ListaBicicletasPorUsuario)
            {
                <tr>
                    <td><img src="@String.Format("{0}{1}",System.Configuration.ConfigurationSettings.AppSettings["WebServiceHostPlusImagesDir"],bicicleta.UrlImagem)" style="width:200px;height:200px;"/></td>
                    <td>@bicicleta.Marca</td>
                    <td>@bicicleta.Modelo</td>
                    <td>
                        @Html.ActionLink("Editar", "EditarBicicleta", "Bicicleta", new { IdBicicleta=bicicleta.IdBicicleta }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Excluir", "ExcluirBicicleta", "Bicicleta", new { IdBicicleta=bicicleta.IdBicicleta}, new { @class = "btn btn-primary" })
                        <input type="button" value="Mudar foto" class="btn btn-primary" onclick="ExibirModalMudarImagem('@bicicleta.IdBicicleta');" />
                    </td>
                </tr>
            }
            </tbody>
        </table>  
      </div>
    </div>
      <div class="card">
            <h2 class="card-heading simple">Add bicicleta</h2>
            <div class="card-body">
                @using (Html.BeginForm("InserirAlterarBicicleta", "Bicicleta", FormMethod.Post))
                {
                    @Html.LabelFor(m => m.Bicicleta.Modelo)
                    @Html.TextBoxFor(m => m.Bicicleta.Modelo)
                    @Html.ValidationMessage("Modelo", new { style = "margin-left:10px" })

                    <br />
    
                    @Html.LabelFor(m => m.Bicicleta.Marca)
                    @Html.TextBoxFor(m => m.Bicicleta.Marca)
                    @Html.ValidationMessage("Marca", new { style = "margin-left:10px" })

                    <br />
                    @Html.HiddenFor(m => m.Bicicleta.IdBicicleta)
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                 }
            </div>
        </div>
    </div>
  <!-- END BLOCK -->
</div><!-- END LINHA 2 -->

<!-- LINHA 2 -->
<div class="row-fluid"><//div>
  
  <!-- BLOCK -->
<div id="modalEditarImagem" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
    @using (Html.BeginForm("EnviarImagem", "Bicicleta", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Selecione a imagem</h3>
    </div>
    <div class="modal-body">
        <p>
            <input type="file" id="image" name="image" />
            <input type="number" id="idbicicleta" name="idbicicleta" style="display:none;" />
        </p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary" type="submit">Save changes</button>
    </div>
    }
</div>